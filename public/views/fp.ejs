        <iframe src="/sp" width="100%" height="80%" name="secpageiframe" id="secpageiframe"></iframe>
        <!--MODAL LOGIN!-->
        <div id="mymodal" class="modal">
            <div class="modalCont">
                <span class="close">&times;</span>
                <div id="right">
                    <form action="/addm" method="POST" id="formlog">
                        <label for="emmod">EMAIL:</label>
                        <input type="email" name="emmod" id="emmod"><br>
                        <hr>
                        <label for="usmod">USUARIO:</label>
                        <input type="text" name="usmod" id="usmod"><br>
                        <hr>
                        <label for="pasmod">SENHA:</label>
                        <input type="password" name="pasmod" id="pasmod"><br>
                        <hr>
                        <input type="submit" value="LOGIN" id="buttlog">
                    </form>
                    <a href="">Esqueci minha senha!</a>
                    <a href="">Registrar</a>
                </div>
                <div id="left">
                    <img src="/backend/public/image/TransgenderPrideflag.png" alt="">
                </div>
            </div>
        </div>
        <hr>
        <script>
            var modal = document.getElementById("mymodal");

            var btnLog = document.getElementById("botaoLogSignOut");

            var span = document.getElementsByClassName("close")[0];

            btnLog.onclick = function(){
                modal.style.display = "block";
                secpageiframe.style.display = "none";
            }
            
            // When the user clicks on <span> (x), close the modal
            span.onclick = function() {
                mymodal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) {
                if (event.target == modal) {
                modal.style.display = "none";
                }
            }
        </script>
        
    </body>
