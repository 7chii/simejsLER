<html>
    <head>
    <link rel="stylesheet" href="/backend/public/css/styles.css" type="text/css">
    <title>fp</title>
    </head>
    <body>
        <hr>

        <button type="button" id="botaoLogSignOut"><%= logif %></button>

        <a href="/sql"><button type="button" id="botaoSQL" >
            <img src="/backend/public/image/cogconfig.png" alt="">
        </button>
    </a>
        <iframe src="/sp" width="100%" height="80%" name="secpageiframe" id="secpageiframe"></iframe>
        <!--MODAL LOGIN!-->
        <div id="mymodal" class="modal">
            <div class="modalCont">
                <span class="close">&times;</span>
                <div id="left">
                    <img src="/backend/public/image/TransgenderPrideflag.png" alt="">
                </div>
                <div id="right">
                    <iframe src="/login" frameborder="0" id="iflog" name="iflog"></iframe>
                    <hr>
                    <a href="" target="iflog">Esqueci minha senha!</a>
                    <a href="/regin" target="iflog">Registrar</a>
                </div>
            </div>
        </div>
        <hr>
        <script>
            var modal = document.getElementById("mymodal");
            var btnLog = document.getElementById("botaoLogSignOut");

            var span = document.getElementsByClassName("close")[0];
            
            btnLog.onclick = function(){
                modal.style.display = "block";
                secpageiframe.style.display = "none";
            }
            
            // When the user clicks on <span> (x), close the modal
            span.onclick = function() {
                mymodal.style.display = "none";
                location.reload();
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) {
                if (event.target == modal) {
                modal.style.display = "none";
                }
            }
           
        </script>
        
    </body>
</html>